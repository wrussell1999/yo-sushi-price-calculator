<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/green_left_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/remove_white"
                app:cornerRadius="32dp"
                app:backgroundTint="@color/green"
                android:text="Remove"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/green_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/green_left_button"
                android:layout_toLeftOf="@id/green_right_button"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/green_right_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/add_white"
                app:cornerRadius="32dp"
                app:backgroundTint="@color/green"
                android:text="Add"
                android:onClick="onClick"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:layout_below="@id/green">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/blue_left_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/remove_white"
                app:cornerRadius="32dp"
                app:backgroundTint="@color/blue"
                android:text="Remove"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/blue_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/blue_left_button"
                android:layout_toLeftOf="@id/blue_right_button"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/blue_right_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/add_white"
                app:backgroundTint="@color/blue"
                app:cornerRadius="32dp"
                android:text="Add"
                android:onClick="onClick"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:layout_below="@id/blue">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/purple_left_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/remove_white"
                app:cornerRadius="32dp"
                app:backgroundTint="@color/purple"
                android:text="Remove"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/purple_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/purple_left_button"
                android:layout_toLeftOf="@id/purple_right_button"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/purple_right_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/add_white"
                app:backgroundTint="@color/purple"
                app:cornerRadius="32dp"
                android:text="Add"
                android:onClick="onClick"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:layout_below="@id/purple">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/orange_left_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/remove_white"
                app:cornerRadius="32dp"
                app:backgroundTint="@color/orange"
                android:text="Remove"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/orange_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/orange_left_button"
                android:layout_toLeftOf="@id/orange_right_button"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/orange_right_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/add_white"
                app:backgroundTint="@color/orange"
                app:cornerRadius="32dp"
                android:text="Add"
                android:onClick="onClick"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:layout_below="@id/orange">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pink_left_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/remove_white"
                app:cornerRadius="32dp"
                app:backgroundTint="@color/pink"
                android:text="Remove"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/pink_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/pink_left_button"
                android:layout_toLeftOf="@id/pink_right_button"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pink_right_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/add_white"
                app:backgroundTint="@color/pink"
                app:cornerRadius="32dp"
                android:text="Add"
                android:onClick="onClick"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:layout_below="@id/pink">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grey_left_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/remove_white"
                app:cornerRadius="32dp"
                app:backgroundTint="@color/grey"
                android:text="Remove"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/grey_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/grey_left_button"
                android:layout_toLeftOf="@id/grey_right_button"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grey_right_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                style="@style/Widget.MaterialComponents.Button.IconButton"
                app:icon="@drawable/add_white"
                app:backgroundTint="@color/grey"
                app:cornerRadius="32dp"
                android:text="Add"
                android:onClick="onClick"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="64dp">
            <TextView
                android:id="@+id/total_cost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="64dp"
                android:layout_centerHorizontal="true"
                android:textSize="64dp"
                android:textColor="#000000"
                android:text="£0.00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/total_cost_text"
                android:text="Clear"
                app:cornerRadius="32dp"
                android:onClick="clear" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>